{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django: Blindtest",
            "type": "debugpy",
            "request": "launch",
            "django": true,
            "program": "${workspaceFolder}/blindtest/manage.py",
            "args": [
                "runserver"
            ],
            "envFile": "${workspaceFolder}/blindtest/.env",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "client: chrome",
            "url": "http://localhost:3000",
            "cwd": "${workspaceFolder}/mainsite",
            "webRoot": "${workspaceFolder}/mainsite/app"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "server: nuxt",
            "outputCapture": "std",
            "cwd": "${workspaceFolder}/mainsite",
            "program": "${workspaceFolder}/mainsite/node_modules/nuxt/bin/nuxt.mjs",
            "args": [
                "dev"
            ],
        }    
    ],
    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.patterns": {
        "tsconfig.json": "tsconfig.*.json, env.d.ts",
        "vite.config.*": "jsconfig*, vitest.config.*, cypress.config.*, playwright.config.*",
        "package.json": "package-lock.json, pnpm*, .yarnrc*, yarn*, .eslint*, eslint*, .oxlint*, oxlint*, .prettier*, prettier*, .editorconfig"
    },
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit"
    },
    "compounds": [
        {
            "name": "Fullstack: Nuxt",
            "configurations": [
                "server: nuxt",
                "client: chrome"
            ]
        }
    ]
}
